<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="org.diems.diemsapp.AcdFE">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_fe1"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textAlignment="center"
                android:text="Year of Establishment -2009"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textStyle="bold"
                android:text="Courses"
                android:paddingBottom="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbarSize="3dp"
                android:fadeScrollbars="false">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="Title"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                            android:textColor="@color/colorPrimaryDark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="B. Tech in Mech Engineering"

                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="B. Tech in E And TC Engineering"

                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="B. Tech in Civil Engineering"

                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="B. Tech in CSE"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />



                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="Full time/Part time"
                            android:textColor="@color/colorPrimaryDark"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="Full Time"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="Full Time"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="Full Time"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="Full Time"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />



                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="Duration"
                            android:textColor="@color/colorPrimaryDark"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="4 years/ 8 sem"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="4 years/ 8 sem"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="4 years/ 8 sem"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="4 years/ 8 sem"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />



                    </TableRow>

                    <TableRow
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="Intake"
                            android:textColor="@color/colorPrimaryDark"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="120"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="120"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="120"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="120"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />



                    </TableRow>



                </TableLayout>
            </HorizontalScrollView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Vision"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault" />


            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="@string/about_fe2"
                android:textColor="@color/Black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Mission"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="@string/about_fe3"
                android:textColor="@color/Black"/>
        </LinearLayout>
    </ScrollView>


</FrameLayout>
