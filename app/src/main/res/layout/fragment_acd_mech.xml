<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="org.diems.diemsapp.AcdMech">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Department of Mechanical Engineering"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Year of Establishment -2009"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Courses"
                android:paddingBottom="10dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbarSize="3dp"
                android:fadeScrollbars="false">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="Title"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                            android:textColor="@color/colorPrimaryDark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="B.E. Mechanical Engineering"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="M.E. Mechanical Engineering"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="M.E. Mechanical Engineering (2nd Shift)"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />


                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="Full Time/Part Time"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                            android:textColor="@color/colorPrimaryDark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="Full Time"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="Full Time"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="Full Time"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />


                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="Duration"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                            android:textColor="@color/colorPrimaryDark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="4 Years/8 sem"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="2 Years/4 sem"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="2 Years/4 sem"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />


                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="Intake"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                            android:textColor="@color/colorPrimaryDark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="120"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="24"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="@string/twentyfour"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />


                    </TableRow>


                    <TableRow
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="Established"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                            android:textColor="@color/colorPrimaryDark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="2009"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="2012"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="10dp"
                            android:text="2012"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />


                    </TableRow>

                </TableLayout>
            </HorizontalScrollView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Vision"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="10dp"
                android:text="Developing the department as a centre of excellence to produce engineers with knowledge,skills and character for all occupation."
                android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Mission"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mech"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="10dp"
                android:text="@string/acd_mech"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

        </LinearLayout>

    </ScrollView>


</FrameLayout>
