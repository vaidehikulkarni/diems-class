<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.diems.diemsapp.AcdCse">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Department of Computer Science and Engineering"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textAlignment="center"
            android:text="Year of Establishment -2009"
            android:textColor="@color/colorPrimaryDark"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:text="Courses"
            android:textColor="@color/colorPrimaryDark"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarSize="3dp"
            android:fadeScrollbars="false">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="Title"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="B.E. Computer Engineering"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="M.E. Computer Engineering"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault" />


            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="Full Time/Part Time"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="Full Time"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="Full Time"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault" />


            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="Duration"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="4 Years/8 sem"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="2 Years/4 sem"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault" />


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="Intake"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="120"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="24"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault" />


            </TableRow>


            <TableRow
                android:paddingBottom="10dp">

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Established"
                    android:textColor="@color/colorPrimaryDark"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="2009"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="2012"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault" />


            </TableRow>

        </TableLayout>
        </HorizontalScrollView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Vision"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="To impart quality technical education, inculcate professionalism and research environment towards welfare of society."
            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Mission"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cse"
            android:paddingTop="10dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="@string/acd_cse"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />


    </LinearLayout>

    </ScrollView>

</FrameLayout>
